<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary_30"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/MyCostumToolbarTitle"
            android:layout_weight="0"
            android:text="MyCostumToolbarTitle" />

        <TextView
            style="@style/MyCostumToolbarMenus"
            android:text="MyCostumToolbarMenus" />

    </LinearLayout>

    <TextView
        style="@style/MyTopHeader"
        android:text="MyTopHeader" />

    <TextView
        style="@style/MyTopHeaderCardEdge"
        android:text="MyTopHeaderCardEdge" />

    <View
        style="@style/MyDivider"
        android:layout_margin="@dimen/def_margin_half" />

    <TextView
        style="@style/MyTextHeader.Small"
        android:layout_marginTop="0dp"
        android:text="MyTextHeader.Small" />

    <TextView
        style="@style/MyTextHeader"
        android:layout_marginTop="0dp"
        android:text="MyTextHeader" />

    <TextView
        style="@style/MyTextHeader.Big"
        android:layout_marginTop="0dp"
        android:text="MyTextHeader.Big" />

    <View
        style="@style/MyDivider"
        android:layout_margin="@dimen/def_margin_half" />

    <TextView
        style="@style/MyTextContent.Small.Very"
        android:text="MyTextContent.Small.Very" />

    <TextView
        style="@style/MyTextContent.Small"
        android:text="MyTextContent.Small" />

    <TextView
        style="@style/MyTextContent"
        android:text="MyTextContent" />

    <View
        style="@style/MyDivider"
        android:layout_margin="@dimen/def_margin_half" />

    <TextView
        style="@style/MyTextContent.Grey"
        android:text="MyTextContent.Grey" />

    <TextView
        style="@style/MyTextContent.Grey.Light"
        android:text="MyTextContent.Grey.Light" />

    <View
        style="@style/MyDivider"
        android:layout_margin="@dimen/def_margin_half" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/MyTextContent.Small.Grey.Light"
            android:text="MyTextContent.Small.Grey.Light" />

        <TextView
            android:id="@+id/tv_nama"
            style="@style/MyTextContent"
            android:text="MyTextContent" />
    </LinearLayout>

    <View
        style="@style/MyDivider"
        android:layout_margin="@dimen/def_margin_half" />

    <TextView
        style="@style/MyTextContent"
        android:text="MyTextContent"
        android:textColor="#F44336" />

    <TextView
        style="@style/MyTextContent"
        android:text="MyTextContent"
        android:textColor="#00C853" />

    <TextView
        style="@style/MyTextContent"
        android:text="MyTextContent"
        android:textColor="#2196F3" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_username_p"
        style="@style/MyTextInputLayoutOutlinedBox.Spesial"
        android:layout_margin="@dimen/def_margin"
        android:hint="Username">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_username"
            style="@style/MyTextInputEditText.Spesial" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/MyTextInputLayoutOutlinedBox.Spesial.V2"
        android:layout_margin="@dimen/def_margin"
        app:endIconMode="clear_text"
        android:hint="Label">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/MyTextInputEditText.Spesial.V2" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/MyTextInputLayoutOutlinedBox.Spesial.V3"
        android:layout_margin="@dimen/def_margin"
        app:endIconMode="clear_text"
        android:hint="Label">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/MyTextInputEditText.Spesial.V3" />

    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>